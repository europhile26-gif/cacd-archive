# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
NODE_APP_INSTANCE=0

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cacd_archive
DB_USER=cacd_user
DB_PASSWORD=your_secure_password_here
DB_CONNECTION_LIMIT=10

# Scraping Configuration
SCRAPE_INTERVAL_HOURS=2
SCRAPE_ON_STARTUP=false
SUMMARY_PAGE_URL=https://www.court-tribunal-hearings.service.gov.uk/summary-of-publications?locationId=109
USER_AGENT=CACD-Archive-Bot/1.0 (Educational Project)
REQUEST_TIMEOUT=10000
MAX_RETRIES=3

# Email Alert Configuration
EMAIL_NOTIFICATIONS_ENABLED=false
ALERT_EMAIL=admin@example.com
EMAIL_RECIPIENT_DATA_ERRORS=admin@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=alerts@example.com
SMTP_PASSWORD=your_smtp_password_here
EMAIL_FROM=CACD Archive <alerts@example.com>

# API Configuration
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW=900000
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Frontend Configuration
RECORDS_PER_PAGE=50

# Authentication Configuration (v2.0+)
JWT_SECRET=your_256_bit_secret_key_here_replace_with_random_string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Password Requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Saved Search Configuration
SAVED_SEARCH_MIN_LENGTH=3
SAVED_SEARCH_MAX_LENGTH=255
SAVED_SEARCH_MAX_PER_USER=10

# Notification Rate Limiting
NOTIFICATION_MAX_PER_WINDOW=2
NOTIFICATION_WINDOW_HOURS=12

# Application Base URL (for email links)
BASE_URL=http://localhost:3000

# Registration Settings
ALLOW_PUBLIC_REGISTRATION=true
REQUIRE_ADMIN_APPROVAL=true

# Email Templates (Authentication)
EMAIL_FROM_AUTH='CACD Archive <noreply@example.com>'
